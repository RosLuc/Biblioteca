<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <joined-subclass name="Classes.Multimidia" table="multimidia" extends="Classes.Material">
        <key column="nchamada"/>
        <property name="produtor" type="string">
            <column name="produtor" length="50" not-null="true" />
        </property>
        <property name="estudio" type="string">
            <column name="estudio" length="40" not-null="true" />
        </property>
    </joined-subclass>
</hibernate-mapping>
