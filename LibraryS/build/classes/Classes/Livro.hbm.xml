<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <joined-subclass name="Classes.Livro" table="livro" extends="Classes.Material">
        <key column="nchamada"/>
        <property name="autor" type="string">
            <column name="autor" length="50" not-null="true" />
        </property>
        <property name="editora" type="string">
            <column name="editora" length="40" not-null="true" />
        </property>
        <property name="cdu" type="int">
            <column name="cdu"/>
        </property>
        <property name="cdd" type="int">
            <column name="cdd"/>
        </property>
    </joined-subclass>
</hibernate-mapping>
